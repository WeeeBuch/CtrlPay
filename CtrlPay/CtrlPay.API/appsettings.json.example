{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Database": {
    "Type": "MySQL",
    "ProviderIp": "127.0.0.1",
    "ProviderPort": "3306",
    "DbName": "ctrlpay",
    "DbLogin": "db-username",
    "DbPassword": "db-password"
  },
  "MoneroRpc": {
    "Host": "127.0.0.1",
    "Port": 18088,
    "Username": "monero",
    "Password": "your-wallet-rpc-password"
  },
  "Jwt": {
    "Issuer": "CtrlPay.API",
    "Audience": "CtrlPay.Clients",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 7,
    "PrivateKeyPem": ""
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      },
      "Https": {
        "Url": "https://0.0.0.0:5443"
      }
    }
  }
}