<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Global -->
    <x:String x:Key="App.Title">CtrlPay</x:String>
    <x:String x:Key="App.Watermark">© 2026 CtrlPay</x:String>
    <x:String x:Key="App.Currency">XMR</x:String>

    <!-- Login Window -->
    <x:String x:Key="LoginWindow.Title">LoginWindow.Title</x:String>

    <!-- Login View -->
    <x:String x:Key="LoginView.Button.Switch.Login">LoginView.Button.Switch.Login</x:String>
    <x:String x:Key="LoginView.Button.Switch.Register">LoginView.Button.Switch.Register</x:String>
    <x:String x:Key="LoginView.Button.Login">LoginView.Button.Login</x:String>
    <x:String x:Key="LoginView.Button.Register">LoginView.Button.Register</x:String>

    <x:String x:Key="LoginView.Watermark.Username">LoginView.Watermark.Username</x:String>
    <x:String x:Key="LoginView.Watermark.Password">LoginView.Watermark.Password</x:String>
    <x:String x:Key="LoginView.Watermark.ConfirmPassword">LoginView.Watermark.ConfirmPassword</x:String>
    <x:String x:Key="LoginView.Watermark.Code">LoginView.Watermark.Code</x:String>

    <!-- Dashboard View -->
    <x:String x:Key="DashboardView.TransactionList">DashboardView.TransactionList</x:String>

    <!-- Navbar View -->
    <x:String x:Key="NavbarView.Menu">NavbarView.Menu</x:String>
    <x:String x:Key="NavbarView.Dashboard">NavbarView.Dashboard</x:String>
    <x:String x:Key="NavbarView.Settings">NavbarView.Settings</x:String>
    <x:String x:Key="NavbarView.Debts">NavbarView.Debts</x:String>

    <!-- Credit Counter Piece -->
    <x:String x:Key="CounterPiece.Credits.Title">CounterPiece.Credits.Title</x:String>
    <x:String x:Key="CounterPiece.Pending.Title">CounterPiece.Pending.Title</x:String>

    <!-- Transaction Statuses -->
    <x:String x:Key="Transaction.Status.Completed">Transaction.Status.Completed</x:String>
    <x:String x:Key="Transaction.Status.Pending">Transaction.Status.Pending</x:String>
    <x:String x:Key="Transaction.Status.Failed">Transaction.Status.Failed</x:String>

    <!-- Settings View -->
    <x:String x:Key="SettingsView.Appearance.Title">SettingsView.Appearance.Title</x:String>
    <x:String x:Key="SettingsView.Translation.Title">SettingsView.Translation.Title</x:String>

    <!-- Dates -->
    <x:String x:Key="Date.Today">Date.Today</x:String>
    <x:String x:Key="Date.Yesterday">Date.Yesterday</x:String>
    <x:String x:Key="Date.LastWeek">Date.LastWeek</x:String>
    <x:String x:Key="Date.Last2Weeks">Date.Last2Weeks</x:String>
    <x:String x:Key="Date.Older">Date.Older</x:String>

    <!-- Debts View -->
    <x:String x:Key="DebtView.Payable">DebtView.Payable</x:String>
    <x:String x:Key="DebtView.Watermark.SearchBar">DebtView.Watermark.SearchBar</x:String>
    <x:String x:Key="DebtView.Sorting">DebtView.Sorting</x:String>
    <x:String x:Key="DebtView.SortOption.DateAsc">DebtView.SortOption.DateAsc</x:String>
    <x:String x:Key="DebtView.SortOption.DateDesc">DebtView.SortOption.DateDesc</x:String>
    <x:String x:Key="DebtView.SortOption.AmountAsc">DebtView.SortOption.AmountAsc</x:String>
    <x:String x:Key="DebtView.SortOption.AmountDesc">DebtView.SortOption.AmountDesc</x:String>
    <x:String x:Key="DebtView.PayFromCredit">DebtView.PayFromCredit</x:String>
    <x:String x:Key="DebtView.GenerateAddress">DebtView.GenerateAddress</x:String>

</ResourceDictionary>
