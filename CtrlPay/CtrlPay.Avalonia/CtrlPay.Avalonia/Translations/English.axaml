<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Global -->
    <x:String x:Key="App.Title">CtrlPay</x:String>
    <x:String x:Key="App.Watermark">© 2026 CtrlPay</x:String>
    <x:String x:Key="App.Currency">XMR</x:String>

    <!-- Login Window -->
    <x:String x:Key="LoginWindow.Title">Login</x:String>

    <!-- Login View -->
    <x:String x:Key="LoginView.Button.Switch.Login">Login</x:String>
    <x:String x:Key="LoginView.Button.Switch.Register">Register</x:String>
    <x:String x:Key="LoginView.Button.Login">Login</x:String>
    <x:String x:Key="LoginView.Button.Register">Register</x:String>

    <x:String x:Key="LoginView.Watermark.Username">Username</x:String>
    <x:String x:Key="LoginView.Watermark.Password">Password</x:String>
    <x:String x:Key="LoginView.Watermark.ConfirmPassword">ConfirmPassword</x:String>
    <x:String x:Key="LoginView.Watermark.Code">Verification Code</x:String>

