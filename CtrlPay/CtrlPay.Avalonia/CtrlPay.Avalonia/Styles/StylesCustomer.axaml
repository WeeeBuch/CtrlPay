<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonia="using:CtrlPay.Avalonia">
  <Design.PreviewWith>
    <Border Padding="20">
      <avalonia:CustomerPiece Width="500" Height="200"/>
    </Border>
  </Design.PreviewWith>

 <Style Selector="Border.customerCard">
    <Setter Property="Background" Value="{DynamicResource Brush.Surface}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="Margin" Value="4, 4"/>
    <Setter Property="Transitions">
        <Transitions>
            <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
        </Transitions>
    </Setter>
</Style>

<Style Selector="Border.customerCard:pointerover">
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Accent}"/>
</Style>

<Style Selector="Expander.customerExpander">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="Padding" Value="0"/>
    <Setter Property="CornerRadius" Value="8"/>
    
    <Style.Resources>
        <SolidColorBrush x:Key="ExpanderHeaderBackgroundPointerOver" Color="Transparent" />
        <SolidColorBrush x:Key="ExpanderHeaderBackgroundPressed" Color="Transparent" />
        <SolidColorBrush x:Key="ExpanderHeaderBackgroundExpanded" Color="Transparent" />
        <SolidColorBrush x:Key="ExpanderHeaderForegroundPointerOver" Color="{DynamicResource Color.Text.Primary}" />
    </Style.Resources>
</Style>

<Style Selector="Expander.customerExpander /template/ ToggleButton#ExpanderHeader">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="CornerRadius" Value="8"/> 
</Style>

<Style Selector="Expander.customerExpander /template/ ToggleButton#ExpanderHeader /template/ ContentPresenter#PART_ContentPresenter">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="CornerRadius" Value="8"/>
</Style>

<Style Selector="TextBlock.label">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Secondary}"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
</Style>

<Style Selector="TextBlock.value">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Primary}"/>
    <Setter Property="FontWeight" Value="Medium"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
</Style>
</Styles>
