<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
             xmlns:vm="using:CtrlPay.Avalonia.ViewModels"
             x:DataType="vm:LoginViewModel"
             x:Class="CtrlPay.Avalonia.LoginView"
             Background="{DynamicResource Color.Background}">
  
     <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="20">
        <!-- Přepínací panel Přihlásit / Registrovat -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                    Margin="0,20,0,0" Spacing="20" Grid.Row="0">
            <Button Content="Přihlásit" Width="100" 
                    Command="{Binding ToggleLoginCommand}"/>
            <Button Content="Registrovat" Width="100" 
                    Command="{Binding ToggleRegisterCommand}"/>
        </StackPanel>

        <!-- Obsah formuláře -->
        <Border Grid.Row="1" CornerRadius="10" Background="#FF2A2A2A" 
                Padding="20" Margin="0,20" Width="300" MaxHeight="300">
            <StackPanel x:Name="FormPanel" Spacing="15">
                <!-- Login Fields -->
                <StackPanel x:Name="LoginForm" Spacing="10" IsVisible="{Binding IsLoginSelected}">
                    <TextBox Name="UsernameTextBox" 
                             Watermark="Uživatelské jméno" />
                    <TextBox Name="PasswordTextBox" 
                             Watermark="Heslo" PasswordChar="#"/>
                    <Button Name="LoginButton" Content="Přihlásit se"
                            FontWeight="Bold"/>
                </StackPanel>

                <!-- Register Fields (skryté) -->
                <StackPanel x:Name="RegisterForm" Spacing="10" 
                            IsVisible="{Binding !IsLoginSelected}">
                    <TextBox Name="RegUsernameTextBox" 
                             Watermark="Uživatelské jméno" />
                    <TextBox Name="RegEmailTextBox" Watermark="Email" />
                    <TextBox Name="RegPasswordTextBox" 
                             Watermark="Heslo" PasswordChar="●"/>
                    <TextBox Name="RegConfirmPasswordTextBox" 
                             Watermark="Potvrzení hesla" PasswordChar="●"/>
                    <Button Name="RegisterButton" Content="Registrovat se"
                            FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <TextBlock Grid.Row="3" Text="© 2026 CtrlPay" FontSize="12" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
