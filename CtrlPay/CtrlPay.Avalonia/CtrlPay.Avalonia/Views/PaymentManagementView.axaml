<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="720" d:DesignWidth="1200"
             x:DataType="vm:PaymentManagementViewModel"
             xmlns:hc="using:CtrlPay.Avalonia.HelperClasses"
             xmlns:vm="using:CtrlPay.Avalonia.ViewModels"
             Background="{DynamicResource Color.Background}"
             x:Class="CtrlPay.Avalonia.PaymentManagementView">
    <Grid RowDefinitions="Auto, 10, *" Margin="10">
        <Border Grid.Row="0" BorderThickness="0,0,1,0">
            <StackPanel Spacing="10">
                <TextBox Watermark="hledat........." Height="35" Text="{Binding SearchTerm}"/>
                
                <Border BorderBrush="{DynamicResource Color.Border}" BorderThickness="1" Padding="10" CornerRadius="4">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Řadit podle" FontWeight="Bold" Opacity="0.6" Margin="0,0,0,5"/>
        
                        <ListBox Background="Transparent" 
                                 BorderThickness="0"
                                 SelectedIndex="0"
                                 SelectedItem="{Binding SelectedSortOrder}"
                                 ItemsSource="{Binding SortOptions}">
    
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="5"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>

                            <ListBox.Styles>
                                <Style Selector="ListBoxItem">
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="Margin" Value="0,2"/>
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </ListBox.Styles>
    
                            <ListBox.ItemTemplate>
                                <DataTemplate x:DataType="hc:SortOption">
                                    <TextBlock Text="{Binding DisplayName}" 
                                               VerticalAlignment="Center"
                                               FontSize="14"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2" ColumnDefinitions="*,*">
            <Border BorderThickness="2" BorderBrush="{DynamicResource Brush.Border}" CornerRadius="5" Margin="0,0,5,0">
                <ScrollViewer Padding="0">
                    <ListBox ItemsSource="{Binding Payments}" 
                             SelectedItem="{Binding SelectedPayment}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="hc:TransactionItem">
                                <Border Classes="customerCard" Margin="0,0,5,8" Padding="15,0" Height="60">
                                     <Grid ColumnDefinitions="Auto, *, Auto">
                                         <Border Grid.Column="0" Classes="indicator" Tag="{Binding Status}" Width="4" Height="24" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                         <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                             <TextBlock Text="{Binding Description}" FontSize="15" FontWeight="Medium" TextTrimming="CharacterEllipsis"/>
                                         </StackPanel>
                                         <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                             <TextBlock Text="{Binding Amount, StringFormat=\{0:N2\}}" FontSize="18" FontWeight="Bold"/>
                                         </StackPanel>
                                     </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Border>

            <Border Grid.Column="1" 
                    BorderThickness="2" 
                    BorderBrush="{DynamicResource Brush.Border}" 
                    CornerRadius="5" 
                    Margin="5,0,0,0"
                    Padding="20">
        
                <ContentControl Content="{Binding SelectedPayment}">
                    <ContentControl.ContentTemplate>
                        <DataTemplate x:DataType="hc:TransactionItem">
                            <StackPanel Spacing="15">
                                <TextBlock Text="Detail platby" FontSize="20" FontWeight="Bold"/>
                                <Separator Height="1" Background="{DynamicResource Brush.Border}"/>
                        
                                <TextBlock Text="Popis:" Opacity="0.6"/>
                                <TextBlock Text="{Binding Description}" FontSize="16"/>
                        
                                <TextBlock Text="Částka:" Opacity="0.6" Margin="0,10,0,0"/>
                                <StackPanel Orientation="Horizontal">
                                     <TextBlock Text="{Binding Amount}" FontSize="24" FontWeight="Bold"/>
                                     <TextBlock Text="{DynamicResource App.Currency}" Margin="5,0,0,0" VerticalAlignment="Bottom"/>
                                </StackPanel>

                                <TextBlock Text="Status:" Opacity="0.6" Margin="0,10,0,0"/>
                                <TextBlock Text="{Binding Status}" FontWeight="SemiBold"/>
                            </StackPanel>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </Border>
        </Grid>
    </Grid>
</UserControl>
