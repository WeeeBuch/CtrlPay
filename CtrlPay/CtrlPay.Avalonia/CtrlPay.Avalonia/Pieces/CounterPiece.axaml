<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CtrlPay.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="150"
             x:Class="CtrlPay.Avalonia.CounterPiece"
             x:DataType="vm:CounterPieceModel">
  
    <Border Background="{DynamicResource Brush.Surface}" 
        BorderBrush="{DynamicResource Brush.Border}" 
        BorderThickness="1" 
        CornerRadius="15" 
        Padding="24">
    
    <StackPanel VerticalAlignment="Center" Spacing="4">
    <StackPanel Orientation="Horizontal" Spacing="8">
        <Rectangle Width="3" Height="14" Fill="{DynamicResource Brush.Accent}" RadiusX="1" RadiusY="1"/>
        <TextBlock Text="{Binding Title}" 
                   Foreground="{DynamicResource Brush.Text.Secondary}" 
                   FontSize="12" 
                   FontWeight="Bold"
                   LetterSpacing="1"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,5,0,0" HorizontalAlignment="Right">
        <TextBlock Text="{Binding Amount, StringFormat=\{0:N12\}}" 
                   Foreground="{DynamicResource Brush.Text.Primary}"
                   FontSize="42" 
                   FontWeight="SemiBold"
                   LetterSpacing="-1"/>
        
        <TextBlock Text="{DynamicResource App.Currency}" 
                   Foreground="{DynamicResource Brush.Text.Disabled}" 
                   FontSize="18" 
                   FontWeight="Light"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,8"/>
    </StackPanel>
        <Button HorizontalAlignment="Right" Content="{DynamicResource CounterPiece.Button.AddCredits.Title}"
                IsVisible="{Binding HasButton}" Command="{Binding ButtonPress}"/>
</StackPanel>
</Border>
</UserControl>
